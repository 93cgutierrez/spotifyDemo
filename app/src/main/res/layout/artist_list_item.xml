<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/cardview_notification_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_indicator_status_notification"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/status_pending"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_enterprise_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Bancolombia – Créditos Hipotecaeeeeeeeeeeeeeeeeeeeeeeeeeeee"
                android:textAppearance="@style/title_text_unread"
                app:layout_constraintBottom_toTopOf="@id/tv_title_notification"
                app:layout_constraintEnd_toEndOf="@id/tv_title_notification"
                app:layout_constraintStart_toEndOf="@id/v_indicator_status_notification"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Cita médica - medicina generaleeeeeeeeeeeeeeeeeeeeeeeeeeee"
                android:textAppearance="@style/title_text_unread"
                app:layout_constraintBottom_toBottomOf="@id/v_indicator_status_notification"
                app:layout_constraintEnd_toEndOf="@+id/tv_enterprise_notification"
                app:layout_constraintStart_toEndOf="@id/v_indicator_status_notification"
                app:layout_constraintTop_toBottomOf="@id/tv_title_notification" />

            <TextView
                android:id="@+id/tv_content_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Estimado por medio de la presente le envia dddddddddddddddddddddddddddd"
                android:textAppearance="@style/content_text"
                app:layout_constraintEnd_toEndOf="@+id/tv_enterprise_notification"
                app:layout_constraintStart_toEndOf="@id/v_indicator_status_notification"
                app:layout_constraintTop_toBottomOf="@id/tv_title_notification" />


            <TextView
                android:id="@+id/tv_time_notification"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end|right"
                android:text="10:56 am"
                android:textAppearance="@style/time_notification"
                app:layout_constraintBottom_toBottomOf="@id/tv_enterprise_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_enterprise_notification"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_notification"
                app:layout_constraintEnd_toEndOf="@id/tv_time_notification"
                app:layout_constraintTop_toTopOf="@id/tv_title_notification" />

            <ImageView
                android:id="@+id/iv_attached"
                android:layout_width="20dp"
                android:layout_height="11dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_attach_file"
                app:layout_constraintBottom_toBottomOf="@id/tv_content_notification"
                app:layout_constraintEnd_toEndOf="@id/tv_time_notification"
                app:layout_constraintTop_toTopOf="@id/tv_content_notification" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>